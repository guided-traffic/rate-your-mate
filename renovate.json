{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits",
    ":dependencyDashboard"
  ],
  "semanticCommitType": "fix",
  "labels": ["dependencies"],
  "timezone": "Europe/Berlin",
  "schedule": ["at any time"],
  "prHourlyLimit": 5,
  "prConcurrentLimit": 10,
  "packageRules": [
    {
      "description": "Frontend - Angular Packages gruppieren",
      "matchPaths": ["frontend/**"],
      "matchPackagePatterns": ["^@angular/"],
      "groupName": "Angular",
      "groupSlug": "angular"
    },
    {
      "description": "Frontend - npm Dependencies",
      "matchPaths": ["frontend/**"],
      "matchManagers": ["npm"],
      "labels": ["dependencies", "frontend"]
    },
    {
      "description": "Backend - Go Dependencies",
      "matchPaths": ["backend/**"],
      "matchManagers": ["gomod"],
      "labels": ["dependencies", "backend"]
    },
    {
      "description": "Backend - Gin Framework gruppieren",
      "matchPaths": ["backend/**"],
      "matchPackagePatterns": ["^github.com/gin-"],
      "groupName": "Gin Framework",
      "groupSlug": "gin"
    },
    {
      "description": "Helm Chart Updates",
      "matchPaths": ["helm/**"],
      "labels": ["dependencies", "helm"]
    },
    {
      "description": "GitHub Actions Updates",
      "matchManagers": ["github-actions"],
      "labels": ["dependencies", "ci"],
      "automerge": true
    },
    {
      "description": "Dockerfile Updates",
      "matchManagers": ["dockerfile"],
      "labels": ["dependencies", "docker"]
    },
    {
      "description": "Dev Dependencies - Automerge f√ºr Patch/Minor",
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["patch", "minor"],
      "automerge": true
    }
  ],
  "gomod": {
    "enabled": true,
    "postUpdateOptions": ["gomodTidy", "gomodUpdateImportPaths"]
  },
  "npm": {
    "enabled": true,
    "postUpdateOptions": ["npmDedupe"],
    "rangeStrategy": "bump"
  }
}
